  <asset>
    <texture name="skybox" type="skybox" builtin="gradient" rgb1=".08 .09 .10" rgb2="0 0 0" width="800" height="800" mark="random" markrgb=".8 .8 .8"/>
    <texture name="texplane" type="2d" height="1" width="1" file="../scene_sim/textures/white_marble_tile2.png"/>
    <material name="MatPlane" reflectance="0.01" texture="texplane" texrepeat="4 4" texuniform="true"/>
    <material name="MatMetal" reflectance="0" specular=".2" emission=".01" rgba=".31 .3 .3 1"/>
    <material name="MatGlass" reflectance="1" specular=".4" emission=".25" rgba=".6 .6 .65 .2"/>

    <mesh name="wall" file="../scene_sim/meshes/highwindow.stl" scale="1 1 1"/>
    <mesh name="skyline" file="../scene_sim/meshes/skyline.stl" scale="1 1 1"/>
  </asset>

  <compiler angle="radian"/>

  <statistic extent="3.5"/>

  <visual>
    <map fogstart="1.5" fogend="5" force="0.1" znear="0.01" shadowclip="2"/>
    <quality shadowsize="4096" offsamples="4"/>
  </visual>

  <default>
    <default class='scene'>
      <geom contype="0" conaffinity="0"/>
    </default>
  </default>

  <worldbody>
    <!-- indoor lights -->
    <light directional="false" diffuse=".5 .5 .55" specular="0.3 0.3 0.6" pos="-4 -4 7" dir="1 1 -1"/>
    <light directional="false" diffuse=".5 .5 .55" specular="0.3 0.3 0.6" pos="4 -4 7" dir="-1 1 -1"/>
    <light directional="false" diffuse=".5 .5 .55" specular="0.3 0.3 0.6" pos="0 4 7" dir="0 -1 -1"/>

    <!-- floor, roof and outside -->
    <geom class='scene' name="skyline" mesh="skyline" pos="0 0 -5" type="mesh" rgba=".3 .3 .27 1"/>
    <geom class='scene' name="floor" pos="0 0 0.0001" size="6.5 6.5 .1" conaffinity="1" contype="1" type="plane" material="MatPlane" condim="3"/>
    <geom class='scene' name="roof" type="box" pos="0 0 8" size="6 6 .2" material="MatMetal"/>

    <!-- walls -->
    <geom class='scene' mesh="wall" pos="0 5 0" type="mesh" material="MatMetal"/>
    <geom class='scene' type="box" pos="0 5 3.5" size="5 .01 3.5" material="MatGlass"/>
    <geom class='scene' mesh="wall" pos="0 -5 0" type="mesh" material="MatMetal" euler="0 0 -3.14"/>
    <geom class='scene' type="box" pos="0 -5 3.5" size="5 .01 3.5" material="MatGlass"/>
    <geom class='scene' mesh="wall" pos="5 0 0" type="mesh" material="MatMetal" euler="0 0 -1.57"/>
    <geom class='scene' type="box" pos="5 0 3.5" size=".01 5 3.5" material="MatGlass"/>
    <geom class='scene' mesh="wall" pos="-5 0 0" type="mesh" material="MatMetal" euler="0 0 1.57"/>
    <geom class='scene' type="box" pos="-5 0 3.5" size=".01 5 3.5" material="MatGlass"/>

    <!-- co-ordinate axis -->
    <site name="xaxis" fromto="0 0 0 1 0 0" size=".005" type="capsule" rgba="1 0 0 .25" group="3"/>
    <site name="yaxis" fromto="0 0 0 0 1 0" size=".005" type="capsule" rgba="0 1 0 .25" group="3"/>
  </worldbody>

</mujoco>
